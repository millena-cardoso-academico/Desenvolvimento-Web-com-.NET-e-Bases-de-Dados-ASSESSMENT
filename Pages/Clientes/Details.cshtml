@page
@model AgenciaTurismo.Pages.Clientes.DetailsModel

@{
    ViewData["Title"] = "Details";
}

<h1>Details</h1>

<div>
    <h4>Cliente</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Cliente.Nome)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Cliente.Nome)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Cliente.Email)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Cliente.Email)
        </dd>
    </dl>
    <hr />
    <h4>Reservas do Cliente</h4>
    @if (Model.Cliente.Reservas.Any())
    {
        <table class="table table-sm">
            <thead>
                <tr>
                    <th>Pacote Reservado</th>
                    <th>Data da Reserva</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var reserva in Model.Cliente.Reservas)
                {
                    <tr>
                        <td>@reserva.PacoteTuristico.Titulo</td>
                        <td>@reserva.DataReserva.ToShortDateString()</td>
                    </tr>
                }
            </tbody>
        </table>
    }
    else
    {
        <p>Este cliente ainda não possui reservas.</p>
    }
</div>
<div>
    <a asp-page="./Edit" asp-route-id="@Model.Cliente.Id">Edit</a> |
    <a asp-page="./Index">Back to List</a>
</div>
