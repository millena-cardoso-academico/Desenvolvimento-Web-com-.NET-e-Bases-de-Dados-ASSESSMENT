@page "{pacoteId:int}"
@model AgenciaTurismo.Pages.CreateReservaModel
@{
    ViewData["Title"] = "Fazer Reserva";
}

<h1>@ViewData["Title"]</h1>

<h4>Você está reservando o pacote: <strong>@Model.PacoteParaReservar.Titulo</strong></h4>
<hr />

<div class="row">
    <div class="col-md-6">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger mb-3"></div>

            @* Campo oculto para manter o ID do pacote durante o post *@
            <input type="hidden" asp-for="NovaReserva.PacoteTuristicoId" />

            <div class="form-group mb-3">
                <label asp-for="NovaReserva.ClienteId" class="control-label">Selecione o Cliente</label>
                <select asp-for="NovaReserva.ClienteId" class="form-control"
                        asp-items="Model.ClientesSelectList">
                    <option value="">-- Por favor, selecione um cliente --</option>
                </select>
                <span asp-validation-for="NovaReserva.ClienteId" class="text-danger"></span>
            </div>

            <div class="form-group">
                <input type="submit" value="Confirmar Reserva" class="btn btn-success" />
                <a asp-page="/Pacotes/Index" class="btn btn-secondary">Cancelar</a>
            </div>
        </form>
    </div>
    <div class="col-md-6">
        <div class="card">
            <div class="card-header">Detalhes do Pacote</div>
            <div class="card-body">
                <p><strong>Data de Partida:</strong> @Model.PacoteParaReservar.DataPartida.ToShortDateString()</p>
                <p><strong>Duração:</strong> @Model.PacoteParaReservar.DuracaoDias dias</p>
                <p><strong>Preço:</strong> @Model.PacoteParaReservar.Preco.ToString("C")</p>
            </div>
        </div>
    </div>
</div>