@page
@model AgenciaTurismo.Pages.CreateCidadeModel
@{
    ViewData["Title"] = "Cadastrar Nova Cidade";
}

<h1>@ViewData["Title"]</h1>

<h4>Preencha os dados da nova cidade destino</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form method="post">
            @* Este sumário exibe erros que não são específicos de um campo. *@
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>

            <div class="form-group mb-3">
                <label asp-for="Cidade.PaisDestinoId" class="control-label">País</label>
                <select asp-for="Cidade.PaisDestinoId" class="form-control" asp-items="@Model.PaisesSelectList">
                    <option value="">-- Selecione um País --</option>
                </select>
                <span asp-validation-for="Cidade.PaisDestinoId" class="text-danger"></span>
            </div>

            <div class="form-group mb-3">
                @* O asp-for no label busca o nome da propriedade no modelo. *@
                <label asp-for="Cidade.Nome" class="control-label">Nome da Cidade</label>
                @* O asp-for no input conecta este campo à propriedade Cidade.Nome. *@
                <input asp-for="Cidade.Nome" class="form-control" />
                @* O asp-validation-for exibe a mensagem de erro PARA este campo específico. *@
                <span asp-validation-for="Cidade.Nome" class="text-danger"></span>
            </div>

            <div class="form-group">
                <input type="submit" value="Cadastrar" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-page="Index">Voltar para a Lista</a>
</div>