@page
@model AgenciaTurismo.Pages.CreatePacoteModel
@{
    ViewData["Title"] = "Cadastrar Novo Pacote Turístico";
}

<h1>@ViewData["Title"]</h1>
<hr />

<div class="row">
    <div class="col-md-6">
        <form method="post">
            <div asp-validation-summary="All" class="text-danger"></div>

            <div class="form-group mb-3">
                <label asp-for="Pacote.Titulo" class="control-label"></label>
                <input asp-for="Pacote.Titulo" class="form-control" />
                <span asp-validation-for="Pacote.Titulo" class="text-danger"></span>
            </div>

            <div class="form-group mb-3">
                <label asp-for="Pacote.DataPartida" class="control-label"></label>
                <input asp-for="Pacote.DataPartida" class="form-control" />
                <span asp-validation-for="Pacote.DataPartida" class="text-danger"></span>
            </div>

            <div class="form-group mb-3">
                <label asp-for="Pacote.DuracaoDias" class="control-label"></label>
                <input asp-for="Pacote.DuracaoDias" type="number" class="form-control" />
                <span asp-validation-for="Pacote.DuracaoDias" class="text-danger"></span>
            </div>

            <div class="form-group mb-3">
                <label asp-for="Pacote.CapacidadeMaxima" class="control-label"></label>
                <input asp-for="Pacote.CapacidadeMaxima" type="number" class="form-control" />
                <span asp-validation-for="Pacote.CapacidadeMaxima" class="text-danger"></span>
            </div>

            <div class="form-group mb-3">
                <label asp-for="Pacote.Preco" class="control-label"></label>
                <input asp-for="Pacote.Preco" type="number" step="0.01" class="form-control" />
                <span asp-validation-for="Pacote.Preco" class="text-danger"></span>
            </div>

            <div class="form-group">
                <input type="submit" value="Cadastrar Pacote" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div class="mt-3">
    <a asp-page="Index">Voltar para a Lista</a>
</div>